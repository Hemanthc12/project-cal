pipeline {
    agent any

    environment {
        TP = '10.0.157.107'
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/Hemanthc12/project-cal'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install' // Install project dependencies
                sh 'npx webpack' // Run Webpack to bundle the JavaScript code
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['webser']) {
                    sh "scp -o StrictHostKeyChecking=no -r /var/lib/jenkins/workspace/project-cal/src/* ec2-user@$TP:/var/www/html" // Copy bundled files to remote server
                }
            }
        }
    }
}
