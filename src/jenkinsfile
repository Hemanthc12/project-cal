pipeline {
    agent any

    environment {
        TP = '10.0.73.120'
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/Hemanthc12/project-cal.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install --save-dev webpack' // Assuming you are using npm for JavaScript dependencies
                sh 'npm install -D webpack-cli -y'
                sh 'npm run build' // Assuming you have a build script defined in your package.json
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['webser']) {
                    sh "scp -o StrictHostKeyChecking=no target/*.war ec2-user@$TP:/var/www/html"
                    sh "ssh ec2-user@$TP systemctl restart httpd"
                }
            }
        }
    }
}
